<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Flight Status" FontSize="16" Margin="10"/>
            <TextBlock Name="StatusTextBlock" FontSize="14" Margin="10"/>
            <Button Content="Plane Take Off" Click="PlaneTakeOff_Click" Margin="10"/>
            <Button Content="Plane Land" Click="PlaneLand_Click" Margin="10"/>
            <Button Content="Helicopter Take Off" Click="HelicopterTakeOff_Click" Margin="10"/>
            <Button Content="Helicopter Land" Click="HelicopterLand_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
